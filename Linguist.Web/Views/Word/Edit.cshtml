@model Linguist.DataLayer.Model.Word

@{
    ViewBag.Title = "Linguist: редактирование слова";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>Редактирование слова</h2>

<div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.WordId)
            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.DateAdded)

            <div class="form-group">
                @Html.Label("Слово или фраза:", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OriginalWord, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OriginalWord, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Перевод:", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Translation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Translation, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.Label("Индекс запоминания: ", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RememberIndex, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RememberIndex, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    @Html.ActionLink("Назад", "MyWords", "Home", null, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Удалить", "Remove", "Word", new { wordId = Model.WordId }, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    }
</div>