@{
    ViewBag.Title = "Linguist: Тест";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>Тестирование</h2>

<div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1" style="text-align: left">
        
        <hr />

        <div class="col-md-6 col-sm-6 col-xs-10" style="margin-bottom: 30px;">
            <p>
                @Html.ActionLink("Все слова", "AllWords", "Test", new { showForeign = true }, new { @class = "btn btn-default" })
            </p>
            <p>
                @Html.Action("CategoryMenu", "Category", new { test = true })
            </p>
        </div>

        <div class="col-md-6 col-sm-6 col-xs-10">
            <label>Направление перевода:</label>
            <div class="radio">
                <label><input type="radio" name="optradio" checked="checked">с иностранного языка</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="optradio">с родного языка</label>
            </div>
        </div>

    </div>
</div>