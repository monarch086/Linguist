<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>

<body>
<div class="navbar navbar-inverse" role="navigation">
    
    @Html.ActionLink("Linguist", "MyWords", "Home", null, new {@class = "navbar-brand"})

    <ul class="nav navbar-nav hidden-xs">
        <li>
            @Html.ActionLink("Мои слова", "MyWords", "Home", null, new { @class = "navbar-brand" })
        </li>
        <li>
            @Html.ActionLink("Тренировка", "Main", "Training", null, new { @class = "navbar-brand" })
        </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("SignOut", "Account")" style="margin-right: 10px;"><span class="glyphicon glyphicon-log-out"></span> Выход</a>
        </li>
    </ul>
</div>
    
<div class="row text-center">
    <div>
        @RenderBody()
    </div>
</div>

</body>
</html>
