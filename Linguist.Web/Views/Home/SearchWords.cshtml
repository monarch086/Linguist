@model Linguist.Web.Models.MyWordsModel
    
<table class="table well" id="wordsTable">
    <tr>
        <th class="text-center">
            @Html.DisplayName("Слово")
        </th>
        <th class="text-center">
            @Html.DisplayName("Перевод")
        </th>
        <th class="text-center">
            @Html.DisplayName("Словари")
        </th>
    </tr>

    @foreach (var item in Model.WordsWithCategories)
    {
        var word = item.Word;
        <tr>
            <td>
                @*<a href=""> ni<strong>m</strong>a<strong>n</strong>d </a>*@
                <a href=@Url.Action("Edit", "Word", new {wordId = word.WordId, returnUrl = Request.Url.PathAndQuery}, null)>
                    @Html.Raw(word.OriginalWord)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => word.Translation)
            </td>
            <td>
                @foreach (var category in item.WordCategories)
                {
                    <h5><span class="label label-info">@category.CategoryName</span></h5>
                }
            </td>
        </tr>
    }

</table>