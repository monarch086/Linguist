
@{
    ViewBag.Title = "Linguist: Вход";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel with-nav-tabs panel-info">
                <div class="panel-heading">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            @Html.ActionLink("Вход", "Login")
                        </li>
                        <li>
                            @Html.ActionLink("Регистрация", "Register")
                        </li>
                    </ul>
                </div>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <div class="panel-body">
                        <div class="tab-content">
                            <div id="login" class="tab-pane fade in active register">
                                <div class="container-fluid">
                                    <div class="row">
                                        <h2 class="text-center" style="color: #5cb85c;"> <strong> Вход </strong>
                                        </h2><hr/>
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-12">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <span class="glyphicon glyphicon-user"></span>
                                                        </div>
                                                        <input type="text" placeholder="Логин" name="login" class="form-control" id="login-input">
                                                    </div>
                                                    <p id="login-warning"></p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-12">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <span class="glyphicon glyphicon-lock"></span>
                                                        </div>
                                                        <input type="password" placeholder="Пароль" name="password" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-12 col-md-12">
                                            <div class="col-xs-6 col-sm-6 col-md-6">
                                                @*<div class="form-group">
                                                    <input type="checkbox" name="check" checked> Запомнить меня
                                                </div>*@
                                            </div>
                                            <div class="col-xs-6 col-sm-6 col-md-6">
                                                <div class="form-group">
                                                    <a data-toggle="modal" id="reset-btn"> Забыли пароль? </a>
                                                </div>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-12">
                                                <input type="submit" value="Войти" class="btn btn-success btn-block btn-lg" id="submit-btn"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/loginController.js"></script>