@model IEnumerable<Linguist.DataLayer.Model.Word>

<link href="~/Content/TrainStyles.css" rel="stylesheet" />

@{
    ViewBag.Title = "Linguist: Тренировка";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>Тренировка</h2>
<h3 id="counter">Все слова</h3>

<hr/>
<br/>

<div id="main" class="col-md-12 col-sm-12 col-xs-12">
    <div class="hidden-xs" id="left-block">
        <img src="~/Resources/navigate-left.png" id="left" /> 
    </div>
    <a id="left-block-mobile" class="visible-xs" onclick="moveLeft()"></a>

    <div id="central-block">
        <div id="card">
            <div id="word"></div>
        </div>
        <button name="button" id="translationBtn" class="btn btn-default hidden-xs">Показать перевод</button>
    </div>
    
    <div class="hidden-xs" id="right-block">
        <img src="~/Resources/navigate-right.png" id="right" />
    </div>
    <a id="right-block-mobile" class="visible-xs" onclick="moveRight()"></a>
</div>

<script>
    var words = @Html.Raw(Json.Encode(Model));
</script>

<script src="~/Scripts/trainingController.js"></script>